{
  "version": 2,
  "builds": [
    {
      "src": "apps/ui/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "apps/api/api/index.js",
      "use": "@vercel/node",
      "config": {
        "runtime": "nodejs20.x"
      }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "apps/api/api/index.js" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "apps/ui/dist/index.html" }
  ]
}
